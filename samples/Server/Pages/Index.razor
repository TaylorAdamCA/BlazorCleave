@page "/"

<Cleave Placeholder="hh:mm" TimeFormat="@( new TimeFormat{
                                            Format = new[] { 'h', 'm' }
                                        })"
        InputType="InputType.Time" />

<BlazorCleave.Cleave Placeholder="YYYY/MM/DD" DateFormat="@(new DateFormat
                                                          {
                                                              Delimiter = '/',
                                                              Format = new char[] { 'Y', 'm', 'd' }
                                                          })"
                     InputType="InputType.Date" />

<BlazorCleave.Cleave Placeholder="Phone Number" CountryCode="CountryCode.CA" InputType="InputType.PhoneNumber" />

<BlazorCleave.Cleave Placeholder="Credit Card" InputType="InputType.CreditCard" />
<BlazorCleave.Cleave Placeholder="Numeral Type" NumeralType="NumeralTypes.Type.Thousand" InputType="InputType.Numeral" /> 